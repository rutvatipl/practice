                                                    <div class="form-label"> @Html.LabelFor(model => model.Cpassword, htmlAttributes: new { @class = "control-label col-md-2" })</div>
                                                    <div class="form-cnt-area">
                                                        @Html.EditorFor(model => model.Cpassword, new { htmlAttributes = new { @class = "form-control" } })
