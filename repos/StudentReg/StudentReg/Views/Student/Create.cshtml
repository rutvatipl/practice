                                        </div>

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-row">
                                                    <div class="form-label"> @Html.LabelFor(model => model.Firstname, htmlAttributes: new { @class = "control-label col-md-2" })</div>
                                                    <div class="form-cnt-area">
                                                        @Html.EditorFor(model => model.Firstname, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.Firstname, "", new { @class = "text-danger" })
                                                    </div>
                                                    <div class="clear"></div>
                                                </div>



                                            </div>
