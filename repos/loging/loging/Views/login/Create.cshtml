@model loging.Models.Loginform

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Loginform</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.mobile_no, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.mobile_no, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.mobile_no, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<link rel="icon" href="images/favicon.ico" type="image/x-icon" />
<link rel="stylesheet" href="css/bootstrap/bootstrap.min.css">
<link rel="stylesheet" href="css/font-awesome/all.css">
<link rel="stylesheet" href="css/owl-carousel/owl.carousel.min.css">
<link href="css/style.css" rel="stylesheet" type="text/css">
<link href="css/media.css" rel="stylesheet" type="text/css">

@Styles.Render("~/Content/css / bootstrap / bootstrap.min.css")
@Styles.Render("~/Content/css/font-awesome/all.css")
@Styles.Render("~/Content/css / owl-carousel / owl.carousel.min.css")
@Styles.Render("~/Content/css/style.css")
@Styles.Render("~/Content/css / media.css")

<div id="main-container" class="main-container">
    <div id="inner-container" class="inner-container">

        <div id="middle">
            <section class="common-section collegebol-predictor-section">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h1 class="cmn-heading">Welcome to Tathya Infotech, Please Sign In!</h1> <br><br>

                        </div>

                        <div class="col-md-6">
                            <div class="login-cnt">
                                <div class="login-heading">
                                    <h2><img src="images/login-icon.png"> Login <span>If you alreday registered with us. Please Login here.</span></h2>
                                </div>

                                <div class="login-form-area">
                                    <div class="form-row">
                                        <div class="form-label"> @Html.LabelFor(model => model.mobile_no, htmlAttributes: new { @class = "control-label col-md-2" })</div>
                                        <div class="form-cnt-area">
                                            @Html.EditorFor(model => model.mobile_no, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.mobile_no, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="clear"></div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-label"> @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })</div>
                                        <div class="form-cnt-area">
                                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="clear"></div>
                                    </div>


                                    <div class="form-row">
                                        <div class="form-label"></div>
                                        <div class="form-cnt-area">
                                            <label class="custom-checkbox">
                                                <input type="checkbox">
                                                <span class="checkmark"></span> Remember Me
                                            </label>
                                        </div>
                                        <div class="clear"></div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-label"></div>
                                        <div class="form-cnt-area"><a href="#" class="cmn-btn">Login</a></div>
                                        <div class="clear"></div>
                                    </div>
                                    <br>
                                    <div class="form-row">
                                        <div class="form-label"></div>
                                        <div class="form-cnt-area"><a href="#" class="cmn-link"><strong>Forgot your password?</strong></a></div>
                                        <div class="clear"></div>
                                    </div>

                                </div>

                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="signup-cnt">
                                <div class="login-heading">
                                    <h2><img src="images/singup-icon.png"> Sign Up <span>New User? Join the Community! </span></h2>
                                </div>

                                <div class="register-cnt-area">
                                    <p>Signup & get instant updates on special offers & latest discounts.</p>
                                    <p>Avail welcome perks worth up to 30% discount on your first purchase.</p>
                                    <p>Refer a friend & get surprise rewards.</p>

                                    <div class="text-center"><a href="#" class="cmn-btn">Register</a></div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="social-btn">
                                <span><a href="#"><img src="images/social-fb.png"></a></span><span><a href="#"><img src="images/social-gmail.png"></a></span>
                            </div>
                        </div>
                    </div>
                </div>


            </section>


        </div>
    </div>

</div>

